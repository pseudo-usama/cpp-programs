<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= book.title %>" id="title">
    </div>

    <div class="form-item">
        <label for="author">Author</label>
        <select name="author" id="author">
            <% authors.forEach(author => { %>
                <% if (author.id == book.author) { %>
                    <option value="<%= author.id %>" selected><%= author.name %></option>
                <% } else { %>
                    <option value="<%= author.id %>"><%= author.name %></option>
                <% } %>
            <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label for="publist-date">Publist Date</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" id="publist-date">
    </div>

    <div class="form-item">
        <label for="page-count">Page Count</label>
        <input type="number" name="pageCount" value="<%= book.pageCount %>" min="1" id="page-count">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <input type="file" name="cover" id="cover" class="book-cover filepond">
    </div>

    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
</div>