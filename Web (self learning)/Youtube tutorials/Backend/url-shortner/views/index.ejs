<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>

    <link rel="stylesheet" href="bootstrap-4.4.1.min.css">
    <!-- https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css -->
</head>

<body>
    <div class="container">
        <h1>URL Shrinker</h1>

        <form action="/short-url" method="POST" class="my-4 form-inline">
            <label for="full-url" class="sr-only">URL</label>
            <input type="url" name="full-url" id="full-url" placeholder="www.example.com" class="form-control col mr-2" required>

            <button type="submit" class="btn btn-success">Shrink</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% URLs.forEach(({ full, short, clicks }) => { %>
                    <tr>
                        <td><a href="<%= full %>"><%= full %></a></td>
                        <td><a href="<%= short %>"><%= short %></a></td>
                        <td><%= clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>